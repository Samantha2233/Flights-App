<form class="add-flight-form" action="/flights" method="POST"> 
        
    <div>
        <h2> Add a New Flight </h2>
        <div class="input">
            <label for="airport">Airport</label>
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DAL">DAL</option>
                <option value="LAX">LAX</option>
                <option value="LAX">LAX</option>
                <option value="SEA">SEA</option>
            </select>
        </div>
        <div class="input">
            <label for="airline">Airline</label>
            <input type="text" name="airline" id="airline">
        </div>
        <div class="input">
            <label for="flightNo">Flight No.</label>
            <input type="text" name="flightNo" id="flightNo">
        </div>
        <div class="input">
            <label for="departs">Departure</label>
            <input type="datetime-local" name="departs" id="departs">
        </div>
        <button id="save" type="submit">Save Flight</button>
    </div>
</form>